{
    "manifest_version": 3,
    "name": "Focus Mode",
    "version": "1.0",
    "description": "A plugin that helps you stay focused by blocking distracting websites, sending reminders to take breaks, and tracking your productivity over time.",
    "permissions": ["storage", "tabs", "alarms", "activeTab", "webNavigation", "notifications"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/inactive.png"
      }
    },
    
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
    "<all_urls>"
  ],
    "options_ui": {
      "page": "options.html"
    },
    "icons": {
        "16": "icons/inactive.png",
        "48": "icons/inactive.png",
        "128": "icons/inactive.png"
      },
    
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
  }
  